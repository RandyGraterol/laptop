<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Control</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <header class="bg-dark text-white text-center py-3">
        <h1>Panel de Administrador</h1>
    </header>

    <div class="container-fluid">
        <div class="row">
          <%-include('nav')-%>
          <main class="col-md-10 p-4">
            <%- include('dashboarGeneral') -%>
            
            <h2>Listado de Equipos</h2>
            <div class="containerTable">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>marca</th>
                            <th>modelo</th>
                            <th>catalogo</th>
                            <th>descripcion</th>
                            <th>cantidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="usuarioTableBody">

                       <% data.forEach(equipo=>{ %>
                       <tr>
                        <td><%=equipo.id%></td>
                        <td><%=equipo.marca%></td>
                        <td><%=equipo.modelo%></td>
                        <td><%=equipo.catalogo%></td>
                        <td><%=equipo.descripcion%></td>
                        <td><%=equipo.cantidad%></td>
                       <td>
                           <a href="/updateEquipo/<%=equipo.id%>"><img class="imgOpcion" src="/icon/arrow.png" alt=""></a>

                           <a href="/deleteEquipo/<%=equipo.id%>">
                            <img class="imgOpcion" src="/icon/trash.png" alt=""></a>
                        </td>
                        </tr>
                        <% }); %>



                    </tbody>
                </table>
            </div>
            <!-- Formulario para Agregar Usuario -->
            <h2>Agregar Equipo</h2>

            <div class="card mb-3" id="reporte">
                <form action="/crearEquipoPost" method="POST">
                    <div class="inputD">
                        <label for="marca">marca</label>
                        <input type="text" id="marca" name="marca" required>
                    </div>
                    <div class="inputD">
                        <label for="modelo">modelo</label>
                        <input type="text" id="modelo" name="modelo" required>
                    </div>
                    <div class="inputD">
                        <label for="catalogo">catalogo</label>
                        <input type="text" id="catalogo" name="catalogo" required>
                    </div>
                    <div class="inputD">
                        <label for="descripcion">descripcion</label>
                        <input type="text" id="descripcion" name="descripcion" required>
                    </div>
                    <div class="inputD">
                        <label for="cantidad">cantidad</label>
                        <input type="text" id="cantidad" name="cantidad" required>
                    </div>
                    <button class="btn btn-primary">Agregar Equipo</button>
                </form>
            </div>
        </main>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
<script src="js/panel.js"></script>
<script src="js/usuarios.js"></script>
</body>
</html>
